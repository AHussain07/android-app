<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Part2"
        tools:targetApi="31">

        <!-- Launcher -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Part2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Course flows -->
        <activity
            android:name=".CreateCourseActivity"
            android:label="Create Course" />

        <activity
            android:name=".CourseDetailsActivity"
            android:label="Course Details" />

        <!-- Student flows -->
        <activity
            android:name=".AddStudentActivity"
            android:label="Add Student" />

        <activity
            android:name=".StudentDetailsActivity"
            android:label="Student Details" />

        <activity
            android:name=".EditStudentActivity"
            android:label="Edit Student" />

        <activity android:name=".UserManualActivity"
            android:parentActivityName=".MainActivity"
            android:label="User Manual"/>


    </application>

</manifest>
